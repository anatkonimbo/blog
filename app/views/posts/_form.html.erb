<%= tinymce_assets %>

<%= form_for @post, :html => { :multipart => true } do |f| %>
  <% if @post.errors.any? %>
  <div id="error">
    <h2><%= pluralize(@post.errors.count, "error") %> preventes this post from saving</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :tags %>
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, class: "tinymce" %>
  </p>

  <p>
     <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= tinymce %>
